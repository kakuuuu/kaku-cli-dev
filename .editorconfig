# 匹配全部文件
[*]
[*.{js,jsx,ts,tsx,vue}]

root = true                         # 根目录的配置文件，编辑器会由当前目录向上查找，如果找到 `roor = true` 的文件，则不再查找

[*]

end_of_line = lf                    # 结尾换行符，可选"lf"、"cr"、"crlf"
# charset = utf-8                     # 文件编码是 utf-8
# indent_style = space                # 空格缩进,可选"space"、"tab"
# indent_size = 4                     # 缩进空格为4个